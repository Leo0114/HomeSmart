---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  calidad?: string;
  alt: string;
  ImgClass?: string;
}
const { img, calidad = "mid", alt, ImgClass } = Astro.props;
---

<Image src={img} quality={calidad} format="avif" alt={alt} class={ImgClass} />
