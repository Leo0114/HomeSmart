---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  calidad?: string;
  alt: string;
  ImgClass: string;
  ancho?: number;
  hiden?: boolean;
}
const { img, calidad = "mid", alt, ImgClass, ancho, hiden } = Astro.props;
---

<Image
  src={img}
  quality={calidad}
  format="avif"
  alt={alt}
  class={ImgClass}
  width={ancho}
  aria-hidden={hiden}
/>
